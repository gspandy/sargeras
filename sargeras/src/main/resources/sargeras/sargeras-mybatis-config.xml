<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <setting name="logImpl" value="SLF4J"/>
    </settings>

    <typeAliases>
        <typeAlias alias="SagaRecord" type="org.mltds.sargeras.api.model.SagaRecord"/>
        <typeAlias alias="SagaRecordParam" type="org.mltds.sargeras.api.model.SagaRecordParam"/>
        <typeAlias alias="SagaRecordResult" type="org.mltds.sargeras.api.model.SagaRecordResult"/>
        <typeAlias alias="SagaTxRecord" type="org.mltds.sargeras.api.model.SagaTxRecord"/>
        <typeAlias alias="SagaTxRecordParam" type="org.mltds.sargeras.api.model.SagaTxRecordParam"/>
        <typeAlias alias="SagaTxRecordResult" type="org.mltds.sargeras.api.model.SagaTxRecordResult"/>


    </typeAliases>

    <environments default="default">
        <environment id="default">
            <transactionManager type="JDBC"/>
            <dataSource type="org.mltds.sargeras.spi.manager.rdbms.MybatisDataSourceFactory"/>
        </environment>
    </environments>

    <mappers>
        <mapper resource="sargeras/mapper/SagaRecordMapper.xml"/>
        <mapper resource="sargeras/mapper/SagaRecordParamMapper.xml"/>
        <mapper resource="sargeras/mapper/SagaRecordResultMapper.xml"/>

        <mapper resource="sargeras/mapper/SagaTxRecordMapper.xml"/>
        <mapper resource="sargeras/mapper/SagaTxRecordParamMapper.xml"/>
        <mapper resource="sargeras/mapper/SagaTxRecordResultMapper.xml"/>



        <!--<mapper resource="sargeras/mapper/ContextInfoMapper.xml"/>-->
        <!--<mapper resource="sargeras/mapper/ContextLockMapper.xml"/>-->
    </mappers>

</configuration>