<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <settings>
        <setting name="logImpl" value="SLF4J"/>
    </settings>

    <typeAliases>
        <typeAlias alias="SagaRecord" type="org.mltds.sargeras.api.model.SagaRecord"/>
        <typeAlias alias="ContextInfo" type="org.mltds.sargeras.spi.manager.rdbms.model.ContextInfoDO"/>
        <typeAlias alias="ContextLock" type="org.mltds.sargeras.spi.manager.rdbms.model.ContextLockDO"/>
    </typeAliases>

    <environments default="default">
        <environment id="default">
            <transactionManager type="JDBC"/>
            <dataSource type="org.mltds.sargeras.spi.manager.rdbms.MybatisDataSourceFactory"/>
        </environment>
    </environments>

    <mappers>
        <mapper resource="sargeras/mapper/RecordMapper.xml"/>


        <!--<mapper resource="sargeras/mapper/ContextInfoMapper.xml"/>-->
        <!--<mapper resource="sargeras/mapper/ContextLockMapper.xml"/>-->
    </mappers>

</configuration>