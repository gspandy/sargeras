<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mltds.sargeras.spi.manager.rdbms.mapper.SagaTxRecordParamMapper">

    <resultMap id="SagaTxRecordRM" type="SagaTxRecord">
        <id property="id" column="id"/>
        <result property="recordId" column="record_id"/>
        <result property="cls" column="cls"/>
        <result property="method" column="method"/>
        <result property="compensateMethod" column="compensate_method"/>
        <result property="parameterTypes" column="parameter_types"/>
        <result property="parameterNames" column="parameter_names"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="modifyTime" column="modify_time"/>
    </resultMap>

    <insert id="insert" parameterType="SagaTxRecord">
        <selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO
        saga_tx_record
        (record_id, cls, method, compensate_method, parameter_types, parameter_names, status, create_time,modify_time)
        VALUES
        (#{recordId},#{cls},#{method},#{compensateMethod},#{parameterTypes},#{parameterNames},#{status},#{createTime},#{modifyTime})
    </insert>

    <update id="updateById" parameterType="ContextInfo">
        UPDATE saga_tx_record
        <set>
            <if test="status != null">
                `status` = #{status},
            </if>
            modify_time = #{modifyTime}
        </set>
        WHERE id = #{id}
    </update>

    <select id="selectByRecordId" resultMap="SagaTxRecordRM">
    SELECT * FROM saga_tx_record
    WHERE record_id = #{recordId}
</select>

</mapper>